<!DOCTYPE html>
<html lang="en">
    <!-- Head--> 
    <%- include('../views/partials/head') %> 
    <link rel="stylesheet" href="/css/edicionProducto.css">
    <!-- Header -->
    <script src="/js/validacionProductos.js"></script>
    <body>
            <%- include('../views/partials/header') %> 


        <main>
            <div class="formulario">
                <div class="titulo">
                    <div class="col-12">
                        <h2 class="products-title">Formulario de Edición de productos</h2>
                    </div>
                    <div>
                        <% if (errors != null) { %>
                            <p style="color:red">ERROR!</p> 
                            
                                <% for (let i=0; i<errors.length;i++){ %> 
                                <li>
                                    <%= errors[i].msg %> 
                                </li>
                            
                            <% } %> 
                            <% }  %> 
                    </div>
                </div>
                <br>
                <div class="input">
                        <div class="row-product-detail">
                            <form action="/products/<%=product.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                            <div class="input col-md-6">
                                <label for="name" class="form-label">Nombre del producto
                                <br>
                                <input type="text" id="name" name="name" placeholder="Nombre del producto" value="<%= product.name %> "class="form-input"></label>
                            </div>
                            <p id="errorNombre">El nombre del producto debe tener al menos 5 letras</p>
                            <br>
                            <div class="input col-md-6">
                                <label for="price" class="form-label">Precio del producto
                                <br>
                                <input type="text" id="price" name="price" placeholder="$$$$$" value="<%= product.price %>" class="form-input"></label>
                            </div>
                            <div class="input col-md-6">
                                <label for="discount" class="form-label">Descuento
                                <br>
                                <input type="text" id="discount" name="discount" placeholder="%%%%%" class="form-input"></label>
                            </div>
                            <div class="input col-md-6">
                                <label for="category" class="form-label">Categoría
                                <br>
                                <select name="category" id="category" class="form-input">
                                    <option value="oferta">En oferta</option>
                                    <option value="destacado">Destacado</option></label>
                                </select>
                            </div>
                            <div class="input">
                                <label for="description" class="form-label">Descripción</label>
                                <br>
                                <input name="description" id="description" value="<%= product.description%>"class="form-input">
                            </div>
                            <p id="errorDescripcion">La descripcion debe ser de al menos 20 caracteres</p>
                                <br>
                            <div class="input">
                            <label for="image">Imagen de producto<br>
                                <img id="foto" src="<%= product.image %> ">
                                <input type= "file" name="image" placeholder="Elegir la imagen" id="file" multiple>
                            </label>
                            </div>
                            <br>
                            <br>
                            <div class="input-buton">
                                <button type="submit" class="buy-now-button">Guardar producto</button>
                            </div>
                        </form>
                        </div>
                </div>
            </div>
        </main>
    </body>
    <%- include('../views/partials/footer') %> 
</html>